@model IList<AdminRoles>
@{
    ViewBag.title = "管理组管理";
}
<div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>@ViewBag.title</h5>
        </div>
        <div class="ibox-content">
            <div id="toolbar" class="btn-group">
                <button id="btn_add" type="button" class="btn btn-outline btn-default" onclick="top.showDialog('addadminrole', '添加管理组', '/AdminCP/Member/AddAdminRole', 0, 0)">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
                </button>
            </div>

            <div id="toolbar2" class="btn-group pull-right">
                <button id="btn_refresh" type="button" class="btn btn-outline btn-default" onclick="refresh();">
                    <span class="fa fa-refresh" aria-hidden="true"></span>刷新
                </button>
            </div>
            <table class="tree table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>管理组名称</th>
                        <th class="text-center">是否超级管理员</th>
                        <th class="text-center">是否不许删除</th>
                        <th class="text-center">排序</th>
                        <th>管理组简介</th>
                        <th>操作</th>
                    </tr>
                </thead>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="6" class="text-center">暂无记录...</td></tr>
                }
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Id</td>
                        <td>
                            @m.RoleName
                        </td>
                        <td class="text-center">
                            @if (m.IsSuperAdmin == 1)
                            {
                                <i class="fa fa-check"></i>
                            }
                        </td>
                        <td class="text-center">
                            @if (m.NotAllowDel == 1)
                            {
                                <i class="fa fa-check"></i>
                            }
                        </td>
                        <td class="text-center">@m.Rank</td>
                        <td>@m.RoleDescription</td>
                        <td>
                            <a href="javascript:;" class="btn btn-xs btn-primary" title="编辑" onclick="top.showDialog('eidtadminrole', '编辑管理组详情', '/AdminCP/Member/EditAdminRole/@m.Id', 0, 0)"><i class="fa fa-edit"></i> 编辑</a>
                            <a href="javascript:;" class="btn btn-xs btn-danger" title="删除" onclick="doDel('/AdminCP/Member/DelAdminRole',@m.Id);"><i class="fa fa-close"></i> 删除</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>


</div>